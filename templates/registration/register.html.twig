{% extends 'base.html.twig' %}

{% block title %}
    Register
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="/css/registerForm.css" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}
    <h2 class="d-flex justify-content-center my-4">
        <b>Register</b><img src="{{asset('picture_directory/register-icon.png')}}" class="ms-2">
    </h2>

    <div class="container">
        <div class="col-lg-12">
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm)}}
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <p>{{ form_row(registrationForm.first_name) }}</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-12">
                            <p>{{ form_row(registrationForm.last_name) }}</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-12">
                            <p>{{ form_row(registrationForm.email) }}</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-12">
                            <p>
                                {{ form_row(registrationForm.plainPassword, {
                                    label: 'Password'
                                }) }}
                            </p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-12">
                            <p>
                                {{ form_row(registrationForm.gitHubProfile, {
                                    label: 'GitHub (optional)'
                                }) }}
                            </p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-12">
                            <p class="text-muted mb-0">{{ form_row(registrationForm.picture, {
                                label: 'Avatar Image (optional)'
                            }) }}</p>
                        </div>
                    </div>
                    {{ form_row(registrationForm.agreeTerms) }}
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}
