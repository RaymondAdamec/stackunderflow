{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/userProfile.css') }}" />
{% endblock %}

{% block title %}Profile Controller!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-3 d-flex justify-content-center p-0">
            <img src="/picture_directory/userAvatar.jpeg" alt="">
        </div>
        <div class="col-9 ps-5 d-flex flex-column align-self-center">
            <p>Name: </p>
            <p>Member since: </p>
            <p>Rank: </p>
        </div>
    </div>
    <div class="row my-4">
    <div class="col-sm-6 mb-3 mb-sm-0">
        <div class="card card-1">
        <div class="card-body d-flex justify-content-between">
            <div class="card text-center m-2 " style="width: 10rem;">
                <div class="card-body">
                    <h5 class="card-title"><img src="/picture_directory/votes-icon.png" alt=""></h5>
                    <h5 class="card-text">Votes: </h5>
                </div>
            </div>
            <div class="card text-center m-2" style="width: 10rem;">
                <div class="card-body">
                    <h5 class="card-title"><img src="/picture_directory/answer-icon.png" alt=""></h5>
                    <h5 class="card-text">Answers: </h5>
                </div>
            </div>
            <div class="card text-center m-2" style="width: 10rem;">
                <div class="card-body">
                    <h5 class="card-title"><img src="/picture_directory/question-icon.png" alt=""></h5>
                    <h5 class="card-text">Questions: </h5>
                </div>
            </div>
        </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card card-1">
        <div class="card-body d-flex align-items-center">
                    <h5 class="card-title"><img src="/picture_directory/badge-10.png" alt=""></h5>
                    <h5 class="card-title"><img src="/picture_directory/badge-25.png" alt=""></h5>
                    <h5 class="card-title"><img src="/picture_directory/badge-50.png" alt=""></h5>
                </div>
        </div>
    </div>
    </div>

    <div class="col-lg-12">
            <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                <div class="col-sm-3">
                    <p class="mb-0">Firstname</p>
                </div>
                <div class="col-sm-9">
                    <p class="text-muted mb-0">{{user.firstName}}</p>
                </div>
                </div>
                <hr>
                <div class="row">
                <div class="col-sm-3">
                    <p class="mb-0">Lastname</p>
                </div>
                <div class="col-sm-9">
                    <p class="text-muted mb-0">{{user.lastName}}</p>
                </div>
                </div>
                <hr>
                <div class="row">
                <div class="col-sm-3">
                    <p class="mb-0">Email</p>
                </div>
                <div class="col-sm-9">
                    <p class="text-muted mb-0">{{user.email}}</p>
                </div>
                </div>
                <hr>
                <div class="row">
                <div class="col-sm-3">
                    <p class="mb-0">Github Profile</p>
                </div>
                <div class="col-sm-9">
                    <p class="text-muted mb-0">{{user.gitHubProfile}}</p>
                </div>
                </div>
                <hr>
                <div class="row">
                <div class="col-sm-3">
                    <p class="mb-0">Status</p>
                </div>
                <div class="col-sm-9">
                    <p class="text-muted mb-0">user</p>
                </div>
                </div>
                <hr>
                <div class="row">
                <div class="col-sm-3">
                    <p class="mb-0">Profile Picture</p>
                </div>
                <div class="col-sm-9">
                    <p class="text-muted mb-0">
                        <form action="/action_page.php">                             {# Fileupload insertion needed!  #}
                            <label for="file-upload" class="custom-file-upload btn btn-primary">
                                <input type="file" id="file-upload" name="filename" value="choose file">
                                Choose file
                            </label>
                            <input type="submit" class="btn btn-success" value="Save">
                        </form>
                    </p>
                </div>
                </div>
            </div>
            </div>
    </div>
</div>
{% endblock %}