{% extends 'base.html.twig' %}

{% block title %}All inactive Users{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                
                <th>FirstName</th>
                <th>LastName</th>
                <th>Picture</th>
                <th>GitHubProfile</th>
                <th>IsBanned</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in inactiveUser %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.picture }}</td>
                <td>{{ user.gitHubProfile }}</td>
                <td>{{ user.isBanned ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
