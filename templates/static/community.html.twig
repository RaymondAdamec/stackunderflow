{% endblock %}

{% block body %}
    <div class="container-fluid">
        <img src="{{asset('picture_directory/HomeBaner.jpg')}}" class="heroBanner">
        <h1 class="hero-header text-center">
            <em>Our Community</em>
        </h1>
    </div>

    <div class="container d-flex justify-content-between">
        <div class="card text-center m-2 " style="width: 10rem;">
            <div class="card-body">
                <h5 class="card-title"><img src="/picture_directory/members.png" alt=""></h5>
                <h5 class="card-text">Members </h5>
                <p> 250.000</p>
            </div>
        </div>
        <div class="card text-center m-2" style="width: 10rem;">
            <div class="card-body">
                <h5 class="card-title"><img src="/picture_directory/question-icon.png" alt=""></h5>
                <h5 class="card-text">Questions </h5>
