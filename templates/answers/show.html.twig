{% extends 'base.html.twig' %}

{% block title %}Answers{% endblock %}

{% block body %}
    <h1>Answers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ answer.title }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ answer.createdAt ? answer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ answer.text }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_answers_index') }}">back to list</a>

    <a href="{{ path('app_answers_edit', {'id': answer.id}) }}">edit</a>

    {{ include('answers/_delete_form.html.twig') }}
{% endblock %}
