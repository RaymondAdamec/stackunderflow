{% extends 'base.html.twig' %}

{% block title %}New Answers
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="/css/registerForm.css" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}
	<br>
	<div class="container">
		<h1 class="text-center my-4">Create Answer</h1>

		<div class="col-lg-12">
    {{ form_errors(form) }}

    {{ form_start(form, {'attr': {'id': 'profileForm'}}) }}
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12">
                    <p>{{ form_row(form.title) }}</p>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-12">
                    <p>{{ form_row(form.text) }}</p>
                </div>
            </div>
<div class="d-flex justify-content-center"><button class="btn btn-warning">{{ button_label|default('Post Question') }}</button></div>
	</div>
	</div>
	</div>
	{{ form_end(form) }}
	</div>
		<div class="d-flex justify-content-center"><a class="btn btn-primary " href="{{ path('app_questions_index') }}">Back to questions</a></div>
{% endblock %}
