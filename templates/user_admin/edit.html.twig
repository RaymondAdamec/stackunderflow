{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="/css/registerForm.css" rel="stylesheet" type="text/css"/>
{% endblock %}
{% block body %}

<h2 class="d-flex justify-content-center my-4"> Edit User </h2>
<div class="container">
    <div class="col-lg-12">
        {{ form_errors(form) }}
        {{ form_start(form, {'attr': {'id': 'profileForm'}}) }}

        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <p>{{ form_row(form.firstName) }}</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-12">
                        <p>{{ form_row(form.lastName) }}</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-12">
                        <p>{{ form_row(form.email) }}</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-12">
                        <p>{{ form_row(form.gitHubProfile) }}</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-12">
                        <p class="text-muted mb-0">{{ form_row(form.password) }}</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-12">
                        <p class="text-muted mb-0">{{ form_row(form.picture) }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-warning form1 btn-lg" id="saveChangesBtn">Update User</button>
        </div>

        <div class="d-flex justify-content-end">
            <a class="btn btn-primary" href="{{ path('app_user_index') }}">Back to dashboard</a>
        </div>

        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
