{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="/css/userDashboard.css"/>
{% endblock %}
{% block body %}
	<br>
	<div class="container">
		<h1 class="text-center">User details</h1>


		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>FirstName</th>
					<td>{{ user.firstName }}</td>
				</tr>
				<tr>
					<th>LastName</th>
					<td>{{ user.lastName }}</td>
				</tr>
				<tr>
					<th>Picture</th>
					<td>{{ user.picture }}</td>
				</tr>
				<tr>
					<th>GitHubProfile</th>
					<td>{{ user.gitHubProfile }}</td>
				</tr>
				<tr>
					<th>IsBanned</th>
					<td>{{ user.isBanned ? 'Yes' : 'No' }}</td>
				</tr>
			</tbody>
		</table>

	<div class="d-flex justify-content-center mt-4">
		<div class="d-flex">
			<a class="btn btn-warning me-2" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit user</a>
			{{ include('user_admin/_delete_form.html.twig') }}
		</div>
		<div class="ms-auto">
			<a class="btn btn-primary" href="{{ path('app_user_index') }}">Back to dashboard</a>
		</div>
	</div>


	
			
	</div>
{% endblock %}
