{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<br>
	<div class="container">
		<h1 class="text-center">User details</h1>


		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>FirstName</th>
					<td>{{ user.firstName }}</td>
				</tr>
				<tr>
					<th>LastName</th>
					<td>{{ user.lastName }}</td>
				</tr>
				<tr>
					<th>Picture</th>
					<td>{{ user.picture }}</td>
				</tr>
				<tr>
					<th>GitHubProfile</th>
					<td>{{ user.gitHubProfile }}</td>
				</tr>
				<tr>
					<th>IsBanned</th>
					<td>{{ user.isBanned ? 'Yes' : 'No' }}</td>
				</tr>
			</tbody>
		</table>


		<a class="btn btn-primary" href="{{ path('app_user_index') }}">Back to dashboard</a>

		<a class="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit user</a>

		{{ include('user_admin/_delete_form.html.twig') }}
	</div>
{% endblock %}
