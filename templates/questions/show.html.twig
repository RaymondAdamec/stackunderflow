{% extends 'base.html.twig' %}


{% block title %}Question: {{ question.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="d-flex justify-content-center">Question</h1>

        {# Question Detail #}
        <div class="card my-3">
            <div class="row">
                <div class="col-1 d-flex flex-column align-items-center justify-content-center">
                    <p><a href="/ratingsquestions/voteg/{{ question.id }}" > <img src="/assets/thumbs-up-35.png"  alt=""></a></p>
                    <p></p>
                    <p><a href="/ratingsquestions/voteb/{{ question.id }}" > <img src="/assets/thumbs-down-35.png"  alt=""></a></p>
                    <p>Rating: {{ sum }}</p>
                        
                    
                </div>
                <div class="col-11 border-start ps-0">
                    <div class="card-header" >
                       <h4>{{ question.title }}</h4> 
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p>{{ question.text }}</p>
                            <hr>
                            <div class="row">
                                <div class="col-6 footer-card justify-content-start">Tags show here</div>
                                
                                <div class="col-6 footer-card d-flex justify-content-end">{{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s') : '' }}</div>
                            </div>
                        </blockquote>
                    </div>
                </div>
            </div>
        </div>
		
<form method="post" action="{{ path('app_questions_delete', {'id': question.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
    <button class="btn">Delete</button>
</form>
        {# Answers #}
        {% for answer in answers %}
            <div class="card my-3">
                <div class="row">
                    <div class="col-1 d-flex flex-column align-items-center justify-content-center">
                        <p><a href="/ratingsanswers/voteg/{{ answer.id }}" > <img src="/assets/thumbs-up-35.png"  alt=""></a></p>
                        <p></p>
                        <p><a href="/ratingsanswers/voteb/{{ answer.id }}" > <img src="/assets/thumbs-down-35.png"  alt=""></a></p>
                        <p>Rating: {{ answersum[loop.index0] }}</p>
                    
                    </div>
                    <div class="col-11 border-start ps-0">
                        <div class="card-header">
                            {{ answer.title }}
                        </div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <p>{{ answer.text }}</p>
                                <hr>
                                <div class="row">
                                    <div class="col-6 footer-card justify-content-start">Tags show here</div>
                                    <div class="col-6 footer-card d-flex justify-content-end">{{ answer.createdAt ? answer.createdAt|date('Y-m-d H:i:s') : '' }}</div>
                                </div>
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

        {# Answer button #}
        <div class="d-flex justify-content-center">
            <a href="/answers/new/{{ question.id }}" class="btn btn-info">Post Answer</a>
        </div>
    </div>

