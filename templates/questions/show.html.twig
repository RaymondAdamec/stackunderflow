{% extends 'base.html.twig' %} {% block title %}Questions{% endblock %} {% block
body %}
<h1>Questions</h1>

<table class="table">
  <tbody>
    <tr>
      <th>Id</th>
      <td>{{ question.id }}</td>
    </tr>
    <tr>
      <th>Title</th>
      <td>{{ question.title }}</td>
    </tr>
    <tr>
      <th>Created_at</th>
      <td>
        {{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s') : '' }}
      </td>
    </tr>
    <tr>
      <th>Text</th>
      <td>{{ question.text }}</td>
    </tr>
    <tr>
      <th>Image</th>
      <td>{{ question.image }}</td>
    </tr>
    <tr>
      <th>IsChecked</th>
      <td>{{ question.isChecked ? "Yes" : "No" }}</td>
    </tr>
    <tr>
      <th>Voting</th>
      <td><a href="/ratingsquestions/voteg/{{ question.id }}">Good</a></td>

      <td><a href="/ratingsquestions/voteb/{{ question.id }}">Bad</a></td>
    </tr>
  </tbody>
</table>

<a href="{{ path('app_questions_index') }}">back to list</a>

<a href="{{ path('app_questions_edit', { id: question.id }) }}">edit</a>

